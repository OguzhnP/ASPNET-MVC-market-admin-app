@model Product
@{
    ViewData["Title"] = "Update Product";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" placeholder="Computer" />
                <span asp-validation-for="ProductName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" placeholder="16 GB Ram" />
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stock" class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control" placeholder="2" />
                <span asp-validation-for="Stock" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Stock</label>
                <input asp-for="Price" class="form-control" placeholder="13" />
                <span asp-validation-for="Price" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"> </select>
            </div>
            <div class="form-group mb-3 d-grid">
                <button class="btn btn-primary d-block" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <hr />

</div>