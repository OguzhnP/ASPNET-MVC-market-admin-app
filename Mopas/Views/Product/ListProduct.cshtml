@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}


<div class="row">
    <div class="col-8 offset-2">
        <h1 class="display-4 border-bottom text-center pb-2"> Product</h1>
        <a class="btn btn-primary" asp-controller="Product" asp-action="CreateProduct">Ürün Ekle</a>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ProductName</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>@item.CategoryId</td>
                        <td><a class="btn btn-danger" asp-action="DeleteProduct" asp-route-id="@item.Id">Sil</a></td>
                        <td><a class="btn btn-success" asp-action="updateproduct" asp-route-id="@item.Id">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>