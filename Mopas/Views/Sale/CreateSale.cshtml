@model SalesReportViewModel
@{
    ViewData["Title"] = "Create Sale Report";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="SalesName">Sales Name</label>
                <input asp-for="SalesName" class="form-control" />
                <span asp-validation-for="SalesName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalesDate">Sales Date</label>
                <input asp-for="SalesDate" class="form-control" type="date" />
                <span asp-validation-for="SalesDate" class="text-danger"></span>
            </div>
@*
            <div class="form-group mb-3">
                <label asp-for="SalesQuantity">Sales Quantity</label>
                <input asp-for="SalesQuantity" class="form-control" />
                <span asp-validation-for="SalesQuantity" class="text-danger"></span>
            </div>
*@
            <div class="form-group mb-3">
                <label asp-for="SelectedProductIds">Select Products</label>
                <select asp-for="SelectedProductIds" asp-items="@ViewBag.Products" class="form-control" multiple>
                </select>
                <span asp-validation-for="SelectedProductIds" class="text-danger"></span>
            </div>
             
            <div class="form-group mb-3 d-grid">
                <button class="btn btn-primary d-block" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <hr />

</div>