@model CategoryViewModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Electronic" />
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3 d-grid">
                <button class="btn btn-primary d-block" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <hr />
   
</div>